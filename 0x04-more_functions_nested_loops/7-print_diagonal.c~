#include "main.h"

/**
 * print_diagonal - function that draws a diagonal line on the terminal.
 * @n: input value to check
 * Return: nothing.
 */


void print_diagonal(int n)
{

	int i;
	int j;

	for (i = 0; i < n; i++)
	{
		for(j = 0; j <= i; j++)
		{

			if (j != i)
			{
				_putchar(' ');
			}
			else
				_putchar(92);
		}
		_putchar('\n');
		j = 0;
	}
	if (n <= 0)
		_putchar('\n');
}
