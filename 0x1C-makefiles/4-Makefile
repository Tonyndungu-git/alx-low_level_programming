CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ := $(SRC:.c=.o)
TARGET = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(OBJ) -o $(TARGET)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(TARGET) *~ .*~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
